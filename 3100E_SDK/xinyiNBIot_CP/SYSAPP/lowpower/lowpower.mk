####################################################################################################
# directory
####################################################################################################
LOWPOWER_SRC_DIR := $(SYSAPP_SRC_DIR)/lowpower


####################################################################################################
# source file
####################################################################################################
SRCS_LOWPOWER = \
	$(wildcard $(LOWPOWER_SRC_DIR)/src/*.c) \
	$(wildcard $(LOWPOWER_SRC_DIR)/src/*.cpp) \
	$(wildcard $(LOWPOWER_SRC_DIR)/src/*.s) \
	$(wildcard $(LOWPOWER_SRC_DIR)/src/*.S) \
#----------------------------------------------------------------------- \
# if need add more file, move the bottom row to the top \
#----------------------------------------------------------------------- \


SRCS_LOWPOWER_EXCLUDE_LIB = \
#----------------------------------------------------------------------- \
# if need add more file, move the bottom row to the top \
#----------------------------------------------------------------------- \


SRCS_LOWPOWER_EXCLUDE_PRJ = \
#----------------------------------------------------------------------- \
# if need add more file, move the bottom row to the top \
#----------------------------------------------------------------------- \


####################################################################################################
# source
####################################################################################################
SRCS_LOWPOWER_FILE   += $(filter-out $(SRCS_LOWPOWER_EXCLUDE_LIB) $(SRCS_LOWPOWER_EXCLUDE_PRJ), $(SRCS_LOWPOWER))
LOWPOWER_EXCLUDE_LIB += $(filter-out $(SRCS_LOWPOWER_EXCLUDE_PRJ), $(SRCS_LOWPOWER_EXCLUDE_LIB))


####################################################################################################
# include path
####################################################################################################
DEPS_PATH_LOWPOWER += $(LOWPOWER_SRC_DIR)/inc


####################################################################################################
# add to sysapp.mk
####################################################################################################
SYSAPP_EXCLUDE_LIB += $(LOWPOWER_EXCLUDE_LIB)
SRCS_SYSAPP_FILE   += $(SRCS_LOWPOWER_FILE)
DEPS_PATH_SYSAPP   += $(DEPS_PATH_LOWPOWER)