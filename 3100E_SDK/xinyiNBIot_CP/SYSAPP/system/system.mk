####################################################################################################
# directory
####################################################################################################
SYSTEM_SRC_DIR := $(SYSAPP_SRC_DIR)/system


####################################################################################################
# source file
####################################################################################################
SRCS_SYSTEM = \
	$(wildcard $(SYSTEM_SRC_DIR)/src/*.c) \
	$(wildcard $(SYSTEM_SRC_DIR)/src/*.cpp) \
	$(wildcard $(SYSTEM_SRC_DIR)/src/*.s) \
	$(wildcard $(SYSTEM_SRC_DIR)/src/*.S) \
#----------------------------------------------------------------------- \
# if need add more file, move the bottom row to the top \
#----------------------------------------------------------------------- \


SRCS_SYSTEM_EXCLUDE_LIB = \
#----------------------------------------------------------------------- \
# if need add more file, move the bottom row to the top \
#----------------------------------------------------------------------- \


SRCS_SYSTEM_EXCLUDE_PRJ = \
#----------------------------------------------------------------------- \
# if need add more file, move the bottom row to the top \
#----------------------------------------------------------------------- \


####################################################################################################
# source
####################################################################################################
SRCS_SYSTEM_FILE   += $(filter-out $(SRCS_SYSTEM_EXCLUDE_LIB) $(SRCS_SYSTEM_EXCLUDE_PRJ), $(SRCS_SYSTEM))
SYSTEM_EXCLUDE_LIB += $(filter-out $(SRCS_SYSTEM_EXCLUDE_PRJ), $(SRCS_SYSTEM_EXCLUDE_LIB))


####################################################################################################
# include path
####################################################################################################
DEPS_PATH_SYSTEM += $(SYSTEM_SRC_DIR)/inc


####################################################################################################
# add to sysapp.mk
####################################################################################################
SYSAPP_EXCLUDE_LIB += $(SYSTEM_EXCLUDE_LIB)
SRCS_SYSAPP_FILE   += $(SRCS_SYSTEM_FILE)
DEPS_PATH_SYSAPP   += $(DEPS_PATH_SYSTEM)